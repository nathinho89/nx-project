{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "types": ["vitest/globals", "jsdom", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@my-app/*": ["../*/src", "./src"]
    }
  },
  "include": [
    "src",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
